<script>
  $(function(){
    $('.board').hide();
    $('#id-' + <%= @first %>).show();
    
    $('.list-group-item').click(function( ){
      $('.board').hide();
      $("a.active").removeClass("active");
      var idStr = $(this).attr("id");
      var length = idStr.length;
      length = length - 2
      var id = idStr.substr(2,length)
      $('#id-' + id).show();
      $(this).addClass("active");
    });
  });
</script>

