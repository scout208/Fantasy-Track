
<div class = "container" id = "invite">
   <h2>League: <%=@league.league_name %></h2>
  <div class="col-md-6 col-md-offset-3" >
      <br/>
      <%= form_for(:league, url: addMember_league_path) do |f| %>
      
        <%= f.label :pass_code, "Enter Code: " , :id => "label"%>
        <%= f.text_field :pass_code,:value=>"", :required => true %>
        
        <%= f.hidden_field :id, :value => @league.id %>
        
        </br>
        </br>
        <%= f.submit "Save", class: "btn btn-primary" %>
      <% end %>
  </div>

</div>
  