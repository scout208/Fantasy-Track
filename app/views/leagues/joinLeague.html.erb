
<div class = "container" id = "invite">
   <h2>League: <%=@league.league_name %></h2>
  <p>This is the page for League Information in detail</p>
  <p>The information will be dispalyed differently depending on roles of user</p>
  <div class="col-md-6 col-md-offset-3" id = "description">
      <br/>
      <%= form_for(:league, url: addMember_league_path) do |f| %>
      
        <%= f.label :pass_code, "Enter Code: " %>
        <%= f.text_field :pass_code, :value => "", :required => true %>
        
        <%= f.hidden_field :id, :value => @league.id %>
        
        </br>
        </br>
        <%= f.submit "Save", class: "btn btn-primary" %>
      <% end %>
  </div>

</div>
  