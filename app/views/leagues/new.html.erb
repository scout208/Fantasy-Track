<h2>Create A New League</h2>

<div class="col-md-6 col-md-offset-3">
      <br/>
      <%= form_for(:league, url: leagues_path) do |f| %>
      
        <%= f.label :league_name, "League Name: " %>
        <%= f.text_field :league_name %>

        <%= f.label :pass_code, "League Password: " %>
        <%= f.text_field :pass_code %>
        </br>
        </br>
        <%= f.submit "Create League", class: "btn btn-primary" %>
      <% end %>
    </div>