<script>
    $(document).ready(function() {
    $('#example').DataTable();
    } );
</script>
<div class = "container" id = "results">
   <% provide(:title, 'Results') %>
  <h2>Event Detail</h2>
  <h5>Event: <%= @event.event_name %></h5> 
  <h5>Event type: Sprint/Hurdle</h5>
  <div>
    <h3>Results</h3>
    <table id="example" class="display" cellspacing="0" width="100%">
        <thead>
            <td>Place</td>
            <td>Name</td>
            <td>Time</td>
            <td>Fastest Start</td>
        </thead>
        <tbody>
           <% @results.each do |p| %>
            <tr>
                <td><%= p.place %></td>
                <td><%= p.name %></td>
                <td><%= p.time_seconds %></td>
                <td><%= p.fastest_start %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>