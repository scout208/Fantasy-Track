<div class = "container" id = "newresult">
   <% provide(:title, 'Create New Results') %>
  <h2>Enter Result for <%= @athlete.first_name %> <%= @athlete.last_name %> for <%= @event.event_name %></h2>
  <div class="col-md-6 col-md-offset-3">
      <br/>
      <%= form_for(:mid_result, url: mid_results_path) do |f| %>
      
        <%= f.label :minutes, "Minutes: " %>
        <%= f.number_field :minutes, :required => true %>
        
        <%= f.label :time_seconds, "Seconds: " %>
        <%= f.number_field :time_seconds, :step => 'any', :required => true %>

        <%= f.label :place, "Place: " %>
        <%= f.number_field :place, :required => true%>

        <%= f.label :split_leader, "Instances of split leader: " %>
        <%= f.number_field :split_leader, :value => "0" %>
  
        <%= f.label :pr, "Personal Record: " %>
        <%= f.check_box :pr %>
        
        <%= f.label :nr, "National Record: " %>
        <%= f.check_box :nr %>
        
        <%= f.label :wr, "World Record: " %>
        <%= f.check_box :wr %>

        </br>
        </br>
        <%= f.submit "Save Result", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>  