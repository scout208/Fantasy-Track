  <div class = "container" id = "login">
       <% provide(:title, 'Log in') %>
      <h1>Log in</h1>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_for(:session, url: login_path) do |f| %>

            <%= f.label :email %>
            <%= f.email_field :email,  :placeholder => "Your Email Address", class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password,  :placeholder => "Your Password", class: 'form-control' %>
            
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
            <% end %>
            <%= f.submit "Log in", class: "btn btn-primary" %>
            <% if flash[:danger] %>
              <div class="notice", style="color:white"><%= flash[:danger] %></div>
            <% end %>
            <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
          <% end %>
        </div>
        
      </div>
  </div>
 